# Environment variables for chess game backend

# Application settings
APP_NAME="Enhanced Chess Game API"
DEBUG=false

# Database settings
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=chess_game

# RabbitMQ settings  
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=chess_moves
RABBITMQ_QUEUE=chess_moves_queue

# Redis settings (for Celery)
REDIS_URL=redis://localhost:6379/0

# Game settings
MAX_MOVE_TIME_DAILY=259200  # 3 days in seconds
MOVE_TIMEOUT_THRESHOLD=300   # 5 minutes

# CORS settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
